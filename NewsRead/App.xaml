<Application x:Class="NewsRead.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NewsRead"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="Font1">
            <Setter Property="TextElement.FontFamily" Value="/Fonts/#Rubik Medium"/>
        </Style>
        <Style x:Key="Font2">
            <Setter Property="TextElement.FontFamily" Value="/Fonts/#Rubik Regular"/>
        </Style>
        <Style x:Key="Font3">
            <Setter Property="TextElement.FontFamily" Value="/Fonts/#Rubik SemiBold"/>
        </Style>
    </Application.Resources>
</Application>
